{
  "name": "custom-template",
  "description": "Template for creating custom workflow profiles",
  "detection": {
    "files": ["YOUR_MAIN_DOCUMENT.md"],
    "paths": ["YOUR_HISTORY_PATH"]
  },
  "paths": {
    "history": "path/to/history",
    "snapshots": "path/to/history/snapshots",
    "compacted": "path/to/history/compacted"
  },
  "snapshot": {
    "prefix": "SNAPSHOT_",
    "dateFormat": "yyyy-MM-dd",
    "filenamePattern": "{prefix}{date}_{milestone}.md",
    "validation": "^[a-zA-Z0-9-_]+$",
    "maxLength": 100
  },
  "compaction": {
    "threshold": 15,
    "strategy": "custom",
    "archivePath": "Archive_{date}"
  },
  "header": {
    "template": "# {document} Snapshot\n**Created**: {date}\n**Description**: {milestone}\n\n---\n{content}"
  }
}